function enough_fuel()
    local fuel_level = turtle.getFuelLevel()
    print("fuel: ", fuel_level)

    if fuel_level < 100 then
        print("low fuel level... consider refueling.")
        return false
    elseif fuel_level == "unlimited" then
        print("no fuel left")
        return false
    else
        return true
    end
end

function farm_tree()
    function force_forward()
        while (turtle.forward() == false) do
            turtle.dig()
        end
    end

    function force_up()
        while (turtle.up() == false) do
            turtle.digUp()
        end
    end

    force_forward()
    while (turtle.detectUp()) do
        force_up()
    end
end

function go_down()
    while (turtle.detectDown() == false) do
        turtle.down()
    end
end

function collect_sapling_and_station()
    function move(dir)
        if dir == "left" then
            turtle.turnLeft()
        elseif dir == "right" then
            turtle.turnRight()
        end
        turtle.forward()
    end

    move("left")
    turtle.suck()
    move("right")
    move("right")
    turtle.forward()
    move("right")
    turtle.forward()
    move("right")
    turtle.turnRight()
end

function plant_tree()
    turtle.select(2)
    local data = turtle.getItemDetail()
    if data.name == "minecraft:sapling" and turtle.getItemCount(2) > 1 then
        turtle.place()
    end
end

function muck_or_wait()
    while (true) do
        if turtle.detect() then
            local success, data = turtle.inspect()
            if success then
                if data.name == "minecraft:sapling" then
                    continue
                elseif data.name == "minecraft:log" then
                    break
                end
            end
        end
    end
end

while enough_fuel() do
    farm_tree()
    go_down()
    collect_sapling_and_station()
    plant_tree()
    muck_or_wait()
end
